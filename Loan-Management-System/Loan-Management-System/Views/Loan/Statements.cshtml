
@{
    ViewBag.Title = "Statements";
}
<input id="LoanId" value="@ViewBag.LoanId" type="hidden">
<input id="IsCollection" value="@ViewBag.IsCollection" type="hidden">
<<div class="main-content">
    @if (ViewBag.IsCollection)
    {
        @Html.Partial("~/Views/Shared/_CollectionNavBar.cshtml")
    }
    else
    {
        @Html.Partial("~/Views/Shared/_LoanNavBar.cshtml")
    }
     <main>

         @if (ViewBag.IsCollection)
         {
             <div style="margin-top:15px;margin-bottom: 25px;">
                 <h2 class="dash-title">Collection Statement</h2>
             </div>
         }
         else
         {
             <div style="margin-top:15px;margin-bottom: 25px;">
                 <h2 class="dash-title">Loan Statement</h2>
             </div>
         }


         <table id="tblLoanStatements" class="table table-striped table-bordered" style="width: 100%; font-size: smaller; background-color:#fff">
             <thead style="font-size: x-small; background-color: black;">
                 <tr>
                     <th style="color: #fff;">Transaction Date</th>
                     <th style="color: #fff;">Transaction Description</th>
                     <th style="color: #fff;">Transaction Amount</th>
                     <th style="color: #fff;">Running Loan Balance</th>
                 </tr>
             </thead>
         </table>
     </main>
</div>
@section scripts{
    <script src="~/Scripts/Application Scripts/Loan/Statements.js"></script>
    }

