@{
    ViewBag.Title = "Loans";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-content">
    <main>
        <div style="margin-top:15px;margin-bottom: 15px;">
            <h2 class="dash-title">Loans</h2>
            <a class="btn btn-primary" onclick="navigateToLoanDetails('0')" style="float: right; margin-right:0;"><span class="ti-plus"></span> Add Loan</a>
        </div>
        <div class="col-lg-12" style="margin-top:15px;margin-bottom: 15px;">
            <div class="col-lg-10">
            </div>
            <div class="col-lg-2" style="margin-top:15px;margin-bottom: 15px;">
                <div style="float:right;">
                    <div id="accordion">
                        <div class="card">
                            <div class="card-header" id="headingThree">
                                <h5 class="mb-0">
                                    <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                                        <p style="font-size: 1rem;">Need help with the colour codes ?</p>
                                    </button>
                                </h5>
                            </div>
                            <div id="collapseThree" class="collapse" aria-labelledby="headingThree" data-parent="#accordion">
                                <div class="card-body">
                                    <div style="width:60px; height:50px;">
                                        <span class="badge" style="background-color: #CAD4DF; margin-bottom:5px;">
                                            Default Loans
                                        </span>
                                        <span class="badge" style="background-color: red; color: #fff; margin-bottom: 5px; ">
                                            Missed Payments
                                        </span>
                                        <span class="badge" style="background-color: #8AB6F9; color: #fff; margin-bottom: 5px;">
                                            Collection in few days
                                        </span>
                                        <span class="badge" style="background-color: #2963A2; color: #fff; margin-bottom: 5px; ">
                                            Collection
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
            
        </div>

        <table id="tblLoans" class="table table-striped table-bordered" style="width: 100%; font-size: smaller;">
            <thead style="font-size: x-small;">
                <tr>
                    <th></th>
                    <th>Loan Date</th>
                    <th>Loan Holder</th>
                    <th>Loan Amount</th>
                    <th>Interest Charged</th>
                    <th>Outstanding Amount</th>
                    <th>Return Date</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </main>
</div>



@section scripts{
    <script src="~/Scripts/Application Scripts/Loan/Loans.js"></script>
}