@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Frugal Finance</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta charset="utf-8" />
    <link href="~/Content/SignIn.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/Application Scripts/Account/Signin.js"></script>
    <title>Sign</title>
</head>
<body>
    <form class="login-form">
        <div class="login-form__logo-container">
            @*<img class="login-form__logo" src="~/Content/Asserts/logo.jpg" alt="Logo" />*@
            <h3 class="login-form__logo" style="color:#ffffff">Frugal Finance</h3>
        </div>
        <div class="login-form__content">
            <div class="login-form__header">@ViewBag.CompanyName</div>
            <div class="login-form__header">Login to your account</div>
            <input class="login-form__input" type="text" id="dc_username" name="dc_username" placeholder="Username" />
            <input class="login-form__input" type="password" id="dc_password" name="dc_password" placeholder="Password" />
            <button class="login-form__button" onclick="return SubmitForm()">Login</button>
        </div>
    </form>
</body>
</html>
